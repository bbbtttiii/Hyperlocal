<form action="/reports/<%=@report.id%>" method="post" autocomplete="on">

    <input type="hidden" name="_method" value="patch">

    Location<br>
    <input type="text" name="report[location" value="<%=@report.location%>">
    <br>
    Current Conditions *<br>
    <input type="text" name="report[current_conditions]" value="<%=@report.current_conditions%>">
    <br>
    Temperature<br>
    <input type="text" name="report[temperature]" value="<%=@report.temperature%>"><select id="temp_unit" name="report[temp_unit]"><option name="f" value="&#176;F">&#176;F</option><option name="c" value="&#176;c">&#176;c</option><option name="k" value="K">K</option></select>
    <br>
    Pressure<br>
    <input type="text" name="report[pressure]" value="<%=@report.pressure%>"><select id="pressure_unit" name="report[pressure_unit]"><option name="mb" value="mb">mb</option><option name="inhg" value="inHg">inHg</option><option name="mmhg" value="mmHg">mmHg</option></select>
    <br>
    Wind Speed<br>
    <input type="text" name="report[wind_speed]" value="<%=@report.wind_speed%>"><select id="wind_unit" name="report[wind_unit]"><option name="mph" value="mph">mph</option><option name="kph" value="kph">kph</option><option name="knots" value="knots">knots</option></select>
    <br>
    Wind Direction<br>
    <input type="text" name="report[wind_direction]" value="<%=@report.wind_direction%>">
    <br>
    Relative Humidity (&#37;)<br>
    <input type="text" name="report[relative_humidity]" value="<%=@report.relative_humidity%>">
    <br>
    Precipation Total<br>
    <input type="text" name="report[precipitation]" value="<%=@report.precipitation%>"><select id="precip_unit" name="report[precip_unit]"><option name="in" value="in">in</option><option name="cm" value="cm">cm</option></select>
    <br>
    Cloud Cover (&#37;)<br>
    <input type="text" name="report[cloud_cover]" value="<%=@report.cloud_cover%>">
    <br>
    Cloud Type<br>
    <input type="text" name="report[cloud_type]" value="<%=@report.cloud_type%>">
    <br><br>
    <input type="submit" value="Done Editing">
    <br><br>

    <p><small>* Required</small></p>
  
</form>